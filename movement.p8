pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
p = {}

-- screen position
p.sx = 24
p.sy = 24
-- dest position
p.dx = 24
p.dy = 24
-- other stuff
p.sprite = 1
p.step_dist = 64

frames = 5

function move()
  if p.sx ~= p.dx or p.sy ~= p.dy then
    local frame_dist = p.step_dist / frames
    if p.dx > p.sx then
      p.sx = p.sx + frame_dist
    end
    if p.dy > p.sy then
      p.sy = p.sy + frame_dist
    end
    if p.dx < p.sx then
      p.sx = p.sx - frame_dist
    end
    if p.dy < p.sy then
      p.sy = p.sy - frame_dist
    end
  end
end

function _update()
  if btnp(0) then
    p.dx -= p.step_dist
  end
  if btnp(1) then
    p.dx += p.step_dist
  end
  if btnp(2) then
    p.dy -= p.step_dist
  end
  if btnp(3) then
    p.dy += p.step_dist
  end
  move()
end

function _draw()
  cls()
  spr(p.sprite, p.sx, p.sy)
end


